  <!-- Script de interacción -->
  <script>
    function toggleCompletion(e) {
      e.classList.toggle('completada');
    }

    document.querySelectorAll('.materia').forEach(m => {
      m.addEventListener('click', () => toggleCompletion(m));
    });
  </script>

